<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/friends_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/friends_list_item_photo"
        app:layout_constraintTop_toTopOf="@+id/friends_list_item_photo" />

    <ImageView
        android:id="@+id/friends_list_item_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Friend photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/friends_list_item_sn_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="Social Network type"
        app:layout_constraintBottom_toBottomOf="@+id/friends_list_item_name"
        app:layout_constraintStart_toEndOf="@+id/friends_list_item_name"
        app:layout_constraintTop_toTopOf="@+id/friends_list_item_name"
        app:srcCompat="@drawable/rectangle" />

    <ImageButton
        android:id="@+id/friends_list_item_btn_like"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:background="@color/transparent"
        android:contentDescription="Like button"
        android:onClick="like"
        android:tint="@color/text_default_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_heart_o" />

    <TextView
        android:id="@+id/friends_list_item_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/friends_list_item_name"
        app:layout_constraintTop_toBottomOf="@+id/friends_list_item_name" />

    <TextView
        android:id="@+id/friends_list_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/friends_list_item_age"
        app:layout_constraintTop_toTopOf="@+id/friends_list_item_age" />
</android.support.constraint.ConstraintLayout>