<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.iteye.androidcourseproject01">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="ru.iteye.androidcourseproject01.presentation.ui.splash_screen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.ui.auth_choose.AuthChooseActivity" />


        <activity android:name=".presentation.ui.auth_email.AuthEmailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.iteye.androidcourseproject01.presentation.ui.auth_choose.AuthChooseActivity" />
        </activity>

        <activity android:name=".presentation.ui.friends_list.FriendsListActivity" />


    </application>

</manifest>