<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.iteye.androidlivecourseapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="ru.iteye.androidlivecourseapp.domain.global.models.Application">

        <activity android:name="ru.iteye.androidlivecourseapp.presentation.ui.splash_screen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ru.iteye.androidlivecourseapp.presentation.ui.auth_choose.AuthChooseActivity" />


        <activity android:name="ru.iteye.androidlivecourseapp.presentation.ui.auth_email.AuthEmailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.iteye.androidlivecourseapp.presentation.ui.auth_choose.AuthChooseActivity" />
        </activity>

        <activity android:name="ru.iteye.androidlivecourseapp.presentation.ui.reg_email.RegEmailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.iteye.androidlivecourseapp.presentation.ui.auth_choose.AuthChooseActivity" />
        </activity>

        <activity android:name="ru.iteye.androidlivecourseapp.presentation.ui.friends_list.FriendsListActivity" />

        <activity android:name="com.vk.sdk.VKServiceActivity" android:label="ServiceActivity" android:theme="@style/VK.Transparent" />

    </application>



</manifest>